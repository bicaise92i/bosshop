<div class="productsBlockLeft">
    <div id="product-tab-content-wait" style="display:none">
        <div id="loading"><i class="icon-refresh icon-spin"></i>&nbsp;{l mod='leftmenu' s='Loading...'}</div>
    </div>
    <div class="panel form-horizontal">
        <div class="panel-heading">
            <i class="icon-plus-sign-alt"></i> {l s='ADD PRODUCTS' mod='leftmenu'}
        </div>
        <div class="form-wrapper">
            <div class="form-group">
                <div id="control-label col-lg-3">
                    <div style="float: left">
                        <input id="attendee_left" name="AttendeeId" type="text" value="" placeholder="{l s='Search for a product' mod='leftmenu'}"/>
                    </div>
                    <div class="col-lg-2 product-pack-button-menu">
                        <button type="button" id="add_products_item" class="btn btn-default">
                            <i class="icon-plus-sign-alt"></i> {l s='Add this product' mod='leftmenu'}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>